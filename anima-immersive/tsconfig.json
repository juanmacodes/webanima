{
  "extends": "next/core-web-vitals",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    // ðŸ‘‡ MUY IMPORTANTE: activa el plugin de Next
    "plugins": [{ "name": "next" }]
  },

  // ðŸ‘‡ MUY IMPORTANTE: incluye los tipos generados por Next
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
