{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "name": "Fondo",
          "slug": "background",
          "color": "#0b0f17"
        },
        {
          "name": "Superficie",
          "slug": "surface",
          "color": "#121827"
        },
        {
          "name": "Texto",
          "slug": "foreground",
          "color": "#eaf0ff"
        },
        {
          "name": "Texto secundario",
          "slug": "muted",
          "color": "#a8b3cc"
        },
        {
          "name": "Acento",
          "slug": "accent",
          "color": "#7df9ff"
        },
        {
          "name": "Morado",
          "slug": "accent-alt",
          "color": "#8b5cf6"
        }
      ],
      "gradients": [
        {
          "name": "Hero Plasma",
          "slug": "hero-plasma",
          "gradient": "radial-gradient(circle at 20% 20%, rgba(125,249,255,0.35) 0%, rgba(11,15,23,0) 60%), radial-gradient(circle at 80% 30%, rgba(124,89,255,0.3) 0%, rgba(11,15,23,0) 65%)"
        }
      ]
    },
    "spacing": {
      "blockGap": "1.75rem",
      "units": ["px", "rem", "%", "vw", "vh"],
      "spacingScale": {
        "steps": 0,
        "mediumStep": 1.5,
        "unit": "rem"
      }
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Inter, 'Inter var', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
          "name": "Inter",
          "slug": "inter"
        }
      ],
      "fontSizes": [
        {
          "slug": "xs",
          "size": "0.875rem",
          "name": "XS"
        },
        {
          "slug": "sm",
          "size": "1rem",
          "name": "S"
        },
        {
          "slug": "md",
          "size": "1.125rem",
          "name": "M"
        },
        {
          "slug": "lg",
          "size": "1.5rem",
          "name": "L"
        },
        {
          "slug": "xl",
          "size": "2.5rem",
          "name": "XL"
        },
        {
          "slug": "xxl",
          "size": "3.75rem",
          "name": "XXL"
        }
      ],
      "fluid": true,
      "dropCap": false
    },
    "border": {
      "radius": 16
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1160px",
      "allowEditing": false
    }
  },
  "styles": {
    "color": {
      "background": "#0b0f17",
      "text": "#eaf0ff",
      "link": "#7df9ff"
    },
    "elements": {
      "button": {
        "border": {
          "radius": "999px"
        },
        "typography": {
          "fontWeight": "600",
          "letterSpacing": "0.04em"
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--inter)",
          "fontWeight": "700",
          "lineHeight": "1.15"
        }
      },
      "link": {
        "typography": {
          "fontWeight": "500"
        },
        "color": {
          "text": "var(--wp--preset--color--accent)"
        }
      }
    },
    "blocks": {
      "core/navigation": {
        "spacing": {
          "padding": {
            "top": "0.75rem",
            "bottom": "0.75rem"
          }
        }
      },
      "core/group": {
        "border": {
          "radius": "16px"
        }
      },
      "core/site-title": {
        "typography": {
          "textTransform": "uppercase",
          "letterSpacing": "0.12em"
        }
      },
      "core/heading": {
        "typography": {
          "fontWeight": "700"
        },
        "spacing": {
          "margin": {
            "bottom": "1rem"
          }
        }
      }
    }
  }
}
