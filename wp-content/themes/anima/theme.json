{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "customTemplates": [],
    "color": {
      "palette": [
        { "slug": "background", "name": "Fondo", "color": "#0b0f17" },
        { "slug": "surface", "name": "Superficie", "color": "#121827" },
        { "slug": "text", "name": "Texto", "color": "#eaf0ff" },
        { "slug": "accent", "name": "Acento", "color": "#7df9ff" },
        { "slug": "violet", "name": "Violeta", "color": "#8b5cf6" },
        { "slug": "muted", "name": "Mutado", "color": "#475569" }
      ],
      "gradients": [
        {
          "name": "Aurora",
          "slug": "aurora",
          "gradient": "linear-gradient(135deg, #7df9ff 0%, #8b5cf6 100%)"
        }
      ],
      "duotone": []
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
          "slug": "inter",
          "name": "Inter"
        },
        {
          "fontFamily": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
          "slug": "system",
          "name": "System"
        }
      ],
      "lineHeight": true,
      "fontSizes": [
        { "slug": "xs", "size": "0.85rem", "name": "XS" },
        { "slug": "sm", "size": "0.95rem", "name": "S" },
        { "slug": "base", "size": "1rem", "name": "Base" },
        { "slug": "lg", "size": "1.25rem", "name": "L" },
        { "slug": "xl", "size": "1.5rem", "name": "XL" },
        { "slug": "xxl", "size": "2.5rem", "name": "XXL" },
        { "slug": "display", "size": "3.75rem", "name": "Display" }
      ]
    },
    "spacing": {
      "spacingScale": {
        "steps": 0,
        "mediumStep": "1rem",
        "scale": 1.25
      },
      "units": ["px", "em", "rem", "vw", "%"]
    },
    "shadow": {
      "presets": [
        {
          "slug": "soft",
          "name": "Sombra suave",
          "shadow": "0 20px 40px rgba(0, 0, 0, 0.25)"
        }
      ]
    },
    "layout": {
      "contentSize": "720px",
      "wideSize": "1200px"
    },
    "blocks": {
      "core/button": {
        "border": {
          "radius": "12px"
        }
      },
      "core/image": {
        "border": {
          "radius": "16px"
        }
      },
      "core/group": {
        "border": {
          "radius": "16px"
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "#0b0f17",
      "text": "#eaf0ff"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.6",
      "fontSize": "var(--wp--preset--font-size--base)"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--accent)"
        }
      },
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--inter)",
          "fontWeight": "600"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Encabezado",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Pie",
      "area": "footer"
    }
  ]
}
